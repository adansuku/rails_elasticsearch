<div class="bg-white shadow-md rounded-lg mb-6 p-6">
  <h5 class="text-xl font-bold mb-2 text-gray-900"><%= article.title %></h5>
  <p class="text-gray-700 mb-4"><%= article.content %></p>
  <p class="text-sm text-gray-500 mb-2">
    Published on: <%= article.published_at.to_date %>
  </p>
  <p class="text-sm">
    <span class="inline-block bg-blue-200 text-blue-800 px-2 py-1 rounded-full">
      <%= article.category %>
    </span>
  </p>
</div>
