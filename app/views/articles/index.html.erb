<div class="max-w-3xl mx-auto px-4">
  <h1 class="text-4xl font-bold mb-6 text-center">Search Options</h1>

  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-6 max-w-xl mx-auto">
    <%= form_with url: articles_path, method: :get, local: true do %>
      <!-- Search term -->
      <div class="mb-4">
        <%= label_tag :q, "Search term", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= text_field_tag :q, params[:q], placeholder: "Enter search term", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <!-- Category -->
      <div class="mb-4">
        <%= label_tag :category, "Category", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= select_tag :category, options_for_select(@categories, params[:category]), include_blank: 'Select a category', class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <!-- Published from -->
      <div class="mb-4">
        <%= label_tag :from, "Published from", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= date_field_tag :from, params[:from], class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <!-- Published to -->
      <div class="mb-4">
        <%= label_tag :to, "Published to", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= date_field_tag :to, params[:to], class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <!-- Buttons -->
      <div class="flex items-center justify-between">
        <!-- Search Button -->
        <%= submit_tag "Search", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>

        <!-- Reset Button -->
        <%= link_to "Reset", articles_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
    <% end %>
  </div>

  <!-- Articles -->
  <div class="mt-6 max-w-3xl mx-auto">
    <h2 class="text-2xl font-semibold mb-4">Search Results</h2>
    <div class="space-y-4">
      <% @articles.each do |article| %>
        <div class="bg-white shadow-md rounded-lg p-6 max-w-xl mx-auto">
          <h3 class="text-xl font-bold text-gray-900 truncate"><%= article.title %></h3>
          <p class="text-gray-600 mb-2 truncate"><%= article.content.truncate(100) %></p>
          <p class="text-sm text-gray-500">Published on: <%= article.published_at.to_date %></p>
          <p class="text-sm text-gray-500">Category: <span class="inline-block bg-blue-200 text-blue-800 px-2 py-1 rounded-full"><%= article.category %></span></p>
          <%#= link_to "Show this article", article, class: "mt-4 inline-block text-blue-500 hover:text-blue-700" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
